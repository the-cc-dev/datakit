(executable
 (name        main)
 (package     datakit)
 (public_name datakit)
 (libraries   datakit_io datakit datakit_conduit datakit_log
               cmdliner fmt.cli fmt.tty logs.fmt asetmap git irmin
               irmin-git irmin-watcher))

(rule
 (targets version.ml)
 (action (with-stdout-to %{targets}
  (echo "let v = \"%{version:datakit}\""))))

